<h2>Edit Existing Blog</h2>

<%= form_with model: @blog, method: :patch do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <br>
  <br>
  <%= form.label :content %>
  <%= form.text_field :content %>
  <br>
  <br>
  <%= form.submit 'Edit Blog Post'%>
<% end %>

<br>
<p><%= link_to 'Back to All Blogs', blogs_path %></p>




